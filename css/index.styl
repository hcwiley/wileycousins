@import url("http://fonts.googleapis.com/css?family=Ubuntu:400,500,700,500italic|Roboto:400,300,500")
@import url("http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css")

$mainColor = #2A3F42
$greenColor = #B7C22C
$lightBlueColor = #22A8B5
$whiteColor = #fff

*
  text-decoration none
  font-family "Helvetica", sans-serif
  text-align center

html, body
  width 100%
  height 100%
  //background-color $mainColor

a
  color $greenColor
a:hover
  text-decoration none
  cursor pointer

h1,h2,h3,h4,h5
  font-family 'Ubuntu', sans-serif
  font-weight bold
  color $mainColor
  font-weight 700
  text-align left

h2
  color $lightBlueColor

a, p
  font-family 'Roboto', sans-serif
  text-align left

.blue
  color $lightBlueColor
.green
  color $greenColor
.amp
  margin 0px 10px
  color $whiteColor

.title
  width 100%
  margin 30px auto
  max-width 700px

.navbar.nav
  height auto
  background-color $mainColor
  text-align center
  width 100%
  max-width 100%
  min-height 20px
  .link
    display inline-block
    color $greenColor
    border-right 1px solid $greenColor
    padding 5px 40px 11px 40px
    a
      font-size 20px
      font-weight 700
      color $whiteColor
      //color $lightBlueColor
      font-variant small-caps
  .link:last-child
    border-right none

#about
  position absolute
  top 270px
  left 0px
  width 100%
  background $mainColor
  margin 0px
  padding 50px 0px
  img
    width 70%

#main
  margin-top 300px

#gents
  position relative
  margin-top 0px

strong
  font-variant small-caps
  font-size 13pt
  color #D1DBBD

