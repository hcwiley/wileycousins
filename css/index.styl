@import url(http://fonts.googleapis.com/css?family=Roboto:400,300italic,400italic,500,700);

$mainColor = #2A3F42
$greenColor = #B7C22C
$lightBlueColor = #22A8B5
$whiteColor = #fff

*
  margin 0px
  padding 0px
  border 0px
  text-decoration none
  font-family "Helvetica", sans-serif

html, body
  width 100%
  height 100%
  //background-color $mainColor

a
  color $greenColor


a, p
  font-family 'Roboto', sans-serif

h3
  color $mainColor
  font-weight 700

.title
  width 100%
  margin-bottom 30px

#todo
  margin 0 auto
  width 600px
  height auto
  min-height 100%
  padding 40px 100px
  background $whiteColor
  //background-image url('../images/bg.png')
  ul
    margin-left 50px
  li
    list-style none
    background-image url('../images/bullet.svg') 
    background-position -150px 0px
    background-repeat no-repeat
    background-size 60% 60%
    margin-bottom 5px
    padding-left 60px
    padding-bottom 10px
    height 20px

.nav
  position absolute
  left 0px
  padding 0px
  width 100%
  height auto
  box-shadow 15px 0px 45px rgba(0,0,0,0.3)
  //background-color $lightBlueColor
  background-color $mainColor
  text-align center
  .link
    display inline-block
    color $greenColor
    border-right 1px solid $greenColor
    padding 5px 20px 11px 20px
    a
      font-size 20px
      color $lightBlueColor
      font-variant small-caps
  .link:last-child
    border-right none

#gents
  position relative
  margin-top 60px

strong
  font-variant small-caps
  font-size 13pt
  color #D1DBBD

